{
  "name": "spaced-repetition-src",
  "version": "1.0.0",
  "description": "Source code for the Spaced Repetition based learning using 'Flashcards' and the SuperMemo Algorithm by Piotr Wozniak",
  "main": "index.js",
  "scripts": {
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/**/*.spec.ts' 'test/**/*.spec.ts'",
    "test:coverage": "nyc npm run test",
    "diagram": "tsuml2 --glob \"./src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorrafael/final-project.git"
  },
  "author": "vitorrafael",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vitorrafael/final-project/issues"
  },
  "homepage": "https://github.com/vitorrafael/final-project#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.14",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.spec.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/_tests_/**/*.*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "dependencies": {
    "sqlite3": "^5.1.1"
  }
}
